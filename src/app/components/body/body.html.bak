<div class="container">
  <br>

  <!-- Loading -->
  <div @if="loading" class="text-center my-3" aria-live="polite">
    <div class="spinner-border" role="status" aria-hidden="true"></div>
    <div class="sr-only">Cargando...</div>
  </div>

  <!-- Error -->
  <div @if="errorMessage" class="alert alert-danger" role="alert">
    {{ errorMessage }}
  </div>

  <!-- Empty state -->
  <div @if="!loading && !errorMessage && (!arrCategorias || arrCategorias.length === 0)" class="alert alert-info">
    No se encontraron categorías.
  </div>

  <!-- Tabla de categorías (solo si hay datos) -->
  <table @if="!loading && arrCategorias?.length > 0" class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripción</th>
      </tr>
    </thead>
    <tbody>
      <tr @for="let item of arrCategorias; trackBy: trackById">
        <th scope="row">{{ item.id }}</th>
        <td>{{ item.nombre }}</td>
        <td>{{ item.descripcion }}</td>
      </tr>
    </tbody>
  </table>
</div>
